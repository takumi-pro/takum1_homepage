---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/m-plus-rounded-1c/400.css";
import "@fontsource/m-plus-rounded-1c/500.css";
import "@fontsource/m-plus-rounded-1c/700.css";

// Get current URL for OGP tags
// const canonicalURL = new URL(Astro.url.pathname, "https://takumidiary.com");
// const ogImageURL = new URL("/takumi_prof.jpg", canonicalURL);
---

<!doctype html>
<html lang="ja" class="w-full h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/takumi_prof_fabicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="東京都を拠点にするソフトウェアエンジニアのtakumiです。toB Saasのプロダクト開発を行っています。" />
		<meta name="author" content="takumi" />
		<meta name="keywords" content="takumi, engineer, software, development, tokyo" />
		
		<!-- Open Graph Protocol -->
		<meta property="og:site_name" content="takumi's Website" />
		<meta property="og:title" content="takumi - Software Engineer" />
		<meta property="og:description" content="東京都を拠点にするソフトウェアエンジニアのtakumiです。toB Saasのプロダクト開発を行っています。" />
		<meta property="og:url" content="https://takumidiary.com" />
		<meta property="og:image" content="https://takumidiary.com/takumi_prof.jpg" />
		<meta property="og:type" content="website" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@takumidiary" />
		<meta name="twitter:creator" content="@takumidiary" />
		<meta name="twitter:image" content="https://takumidiary.com/takumi_prof.jpg" />
		<title>takumi - Software Engineer</title>
		<!-- Import M PLUS Rounded 1c font from Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
	</head>
	<body class="w-full h-full m-0 flex flex-col min-h-screen">
		<Header />
		<main class="flex-grow mb-8">
			<div class="content-container max-w-2xl mx-auto px-4">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.content-container {
		width: 100%;
	}
</style>
